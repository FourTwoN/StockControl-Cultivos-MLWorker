# Local Development Environment
# Copy to .env for local testing

ENVIRONMENT=dev

# Database (local PostgreSQL)
DB_USER=demeter_app
DB_PASSWORD=localpassword
DB_NAME=demeter
DB_HOST=localhost
DB_PORT=5432

# Use local storage instead of GCS
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_ROOT=./local_storage

# ML Models (PyTorch format for local dev, ONNX for production)
MODEL_PATH=./models
DETECTION_MODEL=detect.pt
SEGMENTATION_MODEL=segment.pt

# Logging
LOG_LEVEL=DEBUG
LOG_JSON=false
